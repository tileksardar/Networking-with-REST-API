<html>

<style>


    .post-container {
        background-color: white;
        margin: 16px;
        padding: 16px;
        border-radius: 5px;
        border: solid 1px rgb(180, 174, 174);
}
</style>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<script>
   async function handleDeletePost(e){
        console.log('Deleting post...');
        const postId = e.target.id
        console.log(postId);
        

        const url = '/post/' + postId

        try{
            const response =  await axios.delete(url)
            console.log(response)
            location.reload()
        } catch(err){
            console.error(err.toString())
            alert(err.toString())
        }

        

    }
</script>

<body style="background-color: rgb(212, 212, 212)">
    This will show a list of our posts


    <form class="post-container" action="/post" method="POST">
        <div>Create Post</div>
        <input name="title" type="text" placeholder="Post Title">
        <input name="postBody" type="text" placeholder="Post Body">
        <button type="submit">Submit</button>

    </form>
    <div>

        <% allPosts.forEach(p => { %>
               <div class = 'post-container'>
            <div> <%= p.title %> </div>
            <div> <%= p.body %></div>
            <button id="<%= p.id %>" onclick="handleDeletePost(event)">Delete</button>
               </div>

         <%}) %>
        

    </div>
</body>
</html>